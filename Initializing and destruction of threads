#include <stdio.h> 
#include <stdlib.h>
#include <pthread.h>
#include <unistd.h>
void* thread_func(void* arg) {
int id = *(int)arg;
printf("Thread %d started.\n", id); sleep(5); // Simulate work
printf("Thread %d finished.\n", id); return NULL;}
int main() {
pthread_t threads[3];
int ids[3];
for (int i = 0; i < 3; i++) {
ids[i] = i + 1;
pthread_create(&threads[i], NULL, thread_func, &ids[i]); }
for (int i = 0; i < 3; i++) {
pthread_join(threads[i], NULL);}
printf("All threads completed.\n"); 
return 0;}
