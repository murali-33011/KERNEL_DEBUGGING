#include <stdio.h> 
#include <stdlib.h> 
#include <unistd.h>
int main()
{
FILE *fp;
int entropy;
while(1)
{
fp = fopen("/proc/sys/kernel/random/entropy_avail","r");
if (!fp)
perror("Cannot open entropy_avail");
{
}
exit(1);
fscanf(fp,"%d",&entropy);
fclose(fp);
printf("[ENTROPY] Available: %d bits \n", entropy);
sleep(1);
return 0;
}
}
